<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.user.myapplication.SignUpActivity">


<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="463dp"
    android:layout_marginEnd="283dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:text="Sign Up"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/editEamil"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="382dp"
    android:layout_marginEnd="68dp"
    android:layout_marginStart="101dp"
    android:layout_marginTop="83dp"
    android:ems="10"
    android:hint="Enter Your Eamil..."
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="392dp"
    android:layout_marginEnd="17dp"
    android:layout_marginStart="34dp"
    android:layout_marginTop="46dp"
    android:text="Eamil:"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/editEamil"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    app:layout_constraintVertical_bias="1.0" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="39dp"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="35dp"
    android:text="Password:"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/textView4"
    app:layout_constraintEnd_toStartOf="@+id/editPassword"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="268dp"
    android:layout_marginEnd="7dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="28dp"
    android:text="Confirm Password:"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/editPassword2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editPassword" />

<EditText
    android:id="@+id/editPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="19dp"
    android:layout_marginEnd="57dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="15dp"
    android:ems="10"
    android:hint="Enter Your Password..."
    android:inputType="textPersonName"
    app:layout_constraintBottom_toTopOf="@+id/editPassword2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    app:layout_constraintTop_toBottomOf="@+id/editEamil" />

<EditText
    android:id="@+id/editPassword2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="257dp"
    android:layout_marginStart="6dp"
    android:ems="10"
    android:hint="Enter Your Password..."
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView4" />

<Button
    android:id="@+id/SignUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="149dp"
    android:layout_marginEnd="155dp"
    android:layout_marginStart="136dp"
    android:layout_marginTop="60dp"
    android:text="Sign Up"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editPassword2" />
</android.support.constraint.ConstraintLayout>